<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3 mx-auto">
    <h1>Checkout</h1>
    <h5>Your Total: ${{total}}</h5>
    <div id="charge-error" class="alert alert-danger hidden">

    </div>
    <form action="/checkout" method="post" id="checkout-form">
      <div class="row">
        <div class="col-xl-12">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" required>
          </div>
        </div>
        <div class="col-xl-12">
          <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" required>
          </div>
        </div>
        <hr>
        <div class="col-xl-12">
          <div class="form-group">
            <label for="card-name">Card Holder Name</label>
            <input type="text" class="form-control" id="card-name" required>
          </div>
        </div>
        <div class="col-xl-12">
          <div class="form-group">
            <label for="card-number">Credit Card Number</label>
            <input type="text" class="form-control" id="card-number" required>
          </div>
        </div>
        <div class="col-xl-12">
          <div class="row">
            <div class="col-xl-6">
              <div class="form-group">
                <label for="card=expiry-month">Expiration Month</label>
                <input type="text" class="form-control" id="card=expiry-month" required>
              </div>
            </div>
            <div class="col-xl-6">
              <div class="form-group">
                <label for="card=expiry-year">Expiration Year</label>
                <input type="text" class="form-control" id="card=expiry-year" required>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-12">
          <div class="form-group">
            <label for="card-cvc">CVC</label>
            <input type="text" class="form-control" id="card-cvc" required>
          </div>
        </div>
      </div>
      <button type+ "submit" class="btn btn-success">Buy now</button>
    </form>
  </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="js/checkout.js"></script>
