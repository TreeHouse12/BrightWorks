<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3 mx-auto">
    <h2>Checkout</h2>
    <h6>Your Total: ${{total}}</h6>
    <div id="charge-error" class="alert alert-danger" {{#if noError}}hidden{{/if}}>
      {{errMsg}}
    </div>
    <form action="/checkout" method="post" id="payment-form">
      <div class="row">
        <div class="col-xl-12">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control stripe-element-container" id="name" required name="name">
          </div>
        </div>
        <div class="col-xl-12">
          <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control stripe-element-container" id="address" required name="address">
          </div>
        </div>
        <hr>
        <div class="col-xl-12">
          <div class="form-group">
            <label for="card_name">Card Holder Name</label>
            <input type="text" class="form-control stripe-element-container" id="card_name" required>
          </div>
        </div>
        <div class="col-xl-12">
          <div class="sr-combo-inputs-row">
            <div class="sr-input sr-card-element" id="card-element"></div>
          </div>
          <!-- Used to display form errors. -->
          <div id="card-errors" role="alert"></div>
        </div>
      </div>
      <hr>
      <button type="submit" class="btn btn-success">Buy now</button>
      <p>By clicking, you agree to the <a href="https://stripe.com/connect-account/legal">Stripe Connected Account Agreement</a>.</p>
    </form>
  </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v3/"></script>
<script type="text/javascript" src="js/checkout.js"></script>
