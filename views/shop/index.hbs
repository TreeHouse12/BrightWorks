<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3 mx-auto">
    <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
      {{ successMsg }}
    </div>
  </div>
</div>
{{# each services }}
<div class="row">
  {{# each this }}
  <div class="col-sm-6 col-md-4">
    <div class="card-deck">
      <div class="card">
      <img src="{{ this.imagePath }}" alt="deck" class="img-responsive">
        <div class="card-body">
        <h3>{{ this.title }}</h3>
        <p class="description">{{ this.description }}</p>
          <div class="clearfix">
            <div class="price pull-left">${{ this.price }}</div>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
          </div>
        </div>
      </div>
    </div>
  </div>
    {{/each}}
</div>
{{/each}}
