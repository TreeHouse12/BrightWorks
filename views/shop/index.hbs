 <br>

<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3 mx-auto">
    <div id="success" class="alert alert-success" {{#if noMessages}} hidden {{/if}}>
      {{ successMsg }}
    </div>
  </div>
</div>

<br>
  <div class="container">
    {{# each services }}
      <div class="card-deck mb-3 ">
        {{# each this }}
          <div class="card mb-4 box-shadow">
            <div class="embed-responsive embed-responsive-16by9">
              <img alt="deck" class="card-img-top embed-responsive-item" src="{{ this.imagePath }}"/>
            </div>
            <div class="card-body d-flex flex-column">
              <h1 class="card-title pricing-card-title text-center">${{ this.price }}</h1>
              <ul class="list-unstyled mt-3 mb-4">
                <li>{{ this.description }}</li>
              </ul>


                <input style="border:none" type="text" value="" id="text" />
                <input type="button" value="Click For Estimate" id="button" />
                <br>

                <select id="sqftCombo">
                    <option value="100" selected="selected">1000 sqft or less</option>
                    <option value="250">1001 - 2000 sqft</option>
                    <option value="350">2001 3000 sqft </option>
                    <option value="450">3001 - 4000 sqft</option>
                </select>

                <script type="text/javascript">

                    document.getElementById("button").addEventListener('click', function () {

                     var jobPrice = document.getElementById("sqftCombo").value
                     document.getElementById('text').value = "Your estimated cost is : " + jobPrice + "$" ;

                    });
                </script>
                <br>

              <a href="/add-to-cart/{{this._id}}" class="btn mt-auto btn-success " role="button">Add to Shopping Cart</a>
            </div>
          </div>
          {{/each}}
      </div>
      {{/each}}
  </div>
