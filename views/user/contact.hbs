<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3 mx-auto">
    <h1>CONTACT US</h1>
    {{ msg }}
    <form action="/user/send" method="post">
      <div class="form-group col-md-10">
        <h5><label for="inputName">Name</label></h5>
        <input type="text" name="name" class="form-control" tabindex="1" placeholder="Enter your name" pattern="[a-zA-Z. ]{1,50}" required>
      </div>
      <div class="form-group col-md-10">
        <label for="inputEmail4">Email</label>
        <input type="email" name="email" class="form-control" id="inputEmail4">
      </div>
      <div class="form-group col-md-10">
        <label for="inputAddress">Message</label>
        <textarea name="message" class="form-control" id="inputMessage" placeholder="Enter Nessage" required></textarea>
      </div>
      <div class="form-group col-md-6">
        <label for="inputAddress">Contact No</label>
        <input type="text" name="contactno" class="form-control" id="inputContact" placeholder="Enter Contact No">
      </div>
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <button type="submit" class="btn btn-primary">Send</button> <a href="mailto:support@brightworksmaintenance.com"></a>
    </form>
  </div>
</div>
